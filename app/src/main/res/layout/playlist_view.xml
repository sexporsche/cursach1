<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    app:strokeWidth="2dp"
    app:strokeColor="@color/white"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/black">

    <!-- Обложка плейлиста -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/playlistImg"
        android:layout_width="170dp"
        android:layout_height="160dp"
        android:background="@color/cool_blue"
        android:src="@drawable/music_player_icon_splash_screen"
        app:shapeAppearanceOverlay="@style/curved"
        android:contentDescription="@string/song_img"/>

    <!-- Название плейлиста -->
    <TextView
        android:id="@+id/playlistName"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:background="@color/black"
        android:text="@string/playlist_name"
        android:contentDescription="@string/playlist_name"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_marginTop="170dp"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"/>

    <!-- Кнопка удаления плейлиста -->
    <ImageButton
        android:id="@+id/playlistDeleteBtn"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:src="@drawable/delete_icon"
        android:background="@color/black"
        app:tint="@color/cool_blue"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="170dp"
        android:layout_marginStart="130dp"
        android:contentDescription="@string/playlist_delete" />
</com.google.android.material.card.MaterialCardView>